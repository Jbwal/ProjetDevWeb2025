    <!-- Page Dashboard -->
    <div class="page" id="dashboard">
        <div class="dashboard">
            <nav class="navbar">
                <div class="nav-logo"><a href="/">Templar Hotel</a></div>
                <ul class="nav-links">
                    <li><a onclick="window.location.href='/'" class="dashboard-link" data-page="accueil">Acceuil</a></li>
